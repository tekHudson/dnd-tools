<div id="add-combatant-modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Add Combatant</h4>
      </div>

      <%= ct_form.fields_for :combatants, combat_tracker.combatants.build do |new_combatant| %>
        <div class="modal-body">
          <h3>Combatant Info</h3>

          <div class="row">
            <div class="form-group col-xs-10">
              <%= new_combatant.label :name %>
              <%= new_combatant.text_field :name, class: "form-control" %>
            </div>
          </div>

          <div class="row">
            <div class="form-group col-xs-2">
              <%= new_combatant.label :init %>
              <%= new_combatant.text_field :init, { type: "number", class: "form-control" } %>
            </div>

            <div class="form-group col-xs-2">
              <%= new_combatant.label :max_hp, "Max HP" %>
              <%= new_combatant.text_field :max_hp, { type: "number", class: "form-control" } %>
            </div>

            <div class="form-group col-xs-2">
              <%= new_combatant.label :hp, "HP" %>
              <%= new_combatant.text_field :hp, { type: "number", class: "form-control" } %>
            </div>

            <div class="form-group col-xs-2">
              <%= new_combatant.label :ac, "AC" %>
              <%= new_combatant.text_field :ac, { type: "number", class: "form-control" } %>
            </div>

            <div class="form-group col-xs-2">
              <%= new_combatant.label :dc, "Spell DC" %>
              <%= new_combatant.text_field :dc, { type: "number", class: "form-control" } %>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <%= new_combatant.submit "Save", class: "btn btn-primary" %>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        </div>
      <% end %>
    </div>
  </div>
</div>


