body {
  background-image: image-url("page-background.jpg");
  padding-top: 50px;
}

.content {
  background-image: image-url("content-background.jpg");
}

.btn-danger {
  background-color: $color-scarlet;
  color: $color-half-colonial-white;
}

.btn-primary,
.btn-primary:focus {
  background: $color-tabasco;
  border: 2px solid $color-mahogany;
  color: $color-half-colonial-white;
}

.btn-primary:hover {
  background: $color-mahogany;
  border: 2px solid $color-tabasco;
  color: $color-half-colonial-white;
}

.btn-success,
.btn-success:focus {
  background: $color-green-pea;
  border: 2px solid $color-deep-fir;
  color: $color-half-colonial-white;
}

.btn-success:hover {
  background-color: $color-deep-fir;
  border: 2px solid $color-green-pea;
  color: $color-half-colonial-white;
}

.btn-secondary,
.btn-secondary:focus {
  background: $color-half-colonial-white;
  border: 2px solid $color-tabasco;
  color: $color-mahogany;
}

.btn-secondary:hover {
  background-color: $color-tabasco;
  border: 2px solid $color-half-colonial-white;
  color: $color-half-colonial-white;
}

a {
  color: $color-mahogany;
}

.nav-pills > li > a:hover {
  background-color: $color-half-colonial-white;
}

.nav-pills > li > a,
.nav-pills > li > a:focus {
  background-color: transparent;
  color: $color-mahogany;
  border: 2px solid $color-mahogany;
}

.nav-pills > li.active > a,
.nav-pills > li.active > a:hover,
.nav-pills > li.active > a:focus {
  background: $color-tabasco;
  color: $color-half-colonial-white;
  border: 2px solid $color-mahogany !important;
}

